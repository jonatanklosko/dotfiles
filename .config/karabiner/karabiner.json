                  }
                ],
                "type": "basic"
              },
              {
                "conditions": [
                  {
                    "bundle_identifiers": [
                      "^com\\.apple\\.Terminal$",
                      "^com\\.googlecode\\.iterm2$"
                    ],
                    "type": "frontmost_application_unless"
                  }
                ],
                "from": {
                  "key_code": "w",
                  "modifiers": { "mandatory": ["left_control"] }
                },
                "to": [
                  {
                    "key_code": "delete_or_backspace",
